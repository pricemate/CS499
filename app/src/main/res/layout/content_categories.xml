<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:layout_centerInParent = "true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_categories"
    tools:context="com.example.melanie.ideal.CategoriesActivity"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:rowOrderPreserved="false"
    android:columnCount="2"
    android:rowCount="5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_row="0"
        android:layout_column="0" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/womenIcon"
        android:src="@drawable/women"
        android:layout_row="1"
        android:layout_column="0" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menIcon"
        android:src="@drawable/men"
        android:layout_row="1"
        android:layout_column="1" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kidsIcon"
        android:src="@drawable/kids"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/babyIcon"
        android:src="@drawable/baby"
        android:layout_row="2"
        android:layout_column="1" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electronicsIcon"
        android:src="@drawable/electronics"
        android:layout_row="3"
        android:layout_column="0" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodIcon"
        android:src="@drawable/baby"
        android:layout_row="3"
        android:layout_column="1" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeIcon"
        android:src="@drawable/kids"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entertainmentIcon"
        android:src="@drawable/baby"
        android:layout_row="4"
        android:layout_column="1" />

</GridLayout>
